<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EscapeRankUI.Views.Perfil.EquiposPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Shell.TitleView>
         <Grid>
            <Label
                Text="Equipos"
                Style="{StaticResource texto_cabecera4}"
                VerticalOptions="Center"
                HorizontalOptions="Center">
            </Label>
            <Switch
                IsToggled="{Binding Cargando}"
                Toggled="ActivarSwitchTema"
                OnColor="Black"
                HorizontalOptions="End"
                VerticalOptions="Center"
                Visual="Material" />
        </Grid>
    </Shell.TitleView>

    <ContentPage.Content>
        <Grid>
       <BoxView BackgroundColor="{DynamicResource variable2}" />
        <ScrollView>
                    <StackLayout
                        BindableLayout.ItemsSource="{Binding ListFood}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Orientation="Vertical">
                                  <Frame
                                    OutlineColor="{StaticResource variable3}"
                                    CornerRadius="50"
                                    Visual="Material">
                                        <Image
                                        Source="{Binding Image_Food}"
                                        HeightRequest="100"
                                            Aspect="AspectFill"
                                            />
                                  </Frame>
                                    <Label 
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Title_Food}"
                                         Style="{StaticResource texto_cabecera3}" />
                                </StackLayout>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
        </ScrollView>
        </Grid>      
    </ContentPage.Content>
</ContentPage>