                <StackLayout
                        Grid.Row="1"
                        Spacing="15">

                        <Label
                                Text="{x:Static recursos:Strings.categoria}"
                                Style="{StaticResource texto_cabecera3}"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />
                     
                    <CollectionView
                            ItemsSource="{Binding Categorias}"
                            SelectionMode="Single"
                            SelectedItem="{Binding ObjetoSeleccionado,Mode=TwoWay}"
                            SelectionChangedCommand="{Binding VerFiltradasCommand}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                        Padding="7.5"
                                        HasShadow="False"
                                        Visual="Material"
                                        BackgroundColor="{DynamicResource variable1}">
                                    <StackLayout Spacing="4">
                                        <Frame
                                                Margin="0,0,0,4"
                                                WidthRequest="88"
                                                HeightRequest="88"
                                                Visual="Material"
                                                BackgroundColor="{DynamicResource variable2}">
                                            <Image
                                                Source="{Binding Icono}"                 
                                                HorizontalOptions="Center"
                                                Aspect="AspectFit"/>
                                        </Frame>

                                        <Label
                                                Text="{Binding Tipo}"
                                                Style="{StaticResource texto_titulo1}" />

                                        <Label
                                                Text="{Binding NumeroSalas,StringFormat='{0} Salas'}"
                                                Style="{StaticResource texto_subtitulo5}" />
                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                <StackLayout
                        Grid.Row="2"
                        Spacing="15">

                        <Label
                                Text="{x:Static recursos:Strings.tematica}"
                                Style="{StaticResource texto_cabecera3}"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />

                    <CollectionView
                            ItemsSource="{Binding Tematicas}"
                            SelectionMode="Single"
                            SelectedItem="{Binding ObjetoSeleccionado,Mode=TwoWay}"
                            SelectionChangedCommand="{Binding VerFiltradasCommand}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                        Padding="7.5"
                                        HasShadow="False"
                                        Visual="Material"
                                        BackgroundColor="{DynamicResource variable1}">
                                    <StackLayout Spacing="4">
                                        <Frame
                                                Margin="0,0,0,4"
                                                WidthRequest="88"
                                                HeightRequest="88"
                                                Visual="Material"
                                                BackgroundColor="{DynamicResource variable2}">
                                            <Image
                                                Source="{Binding Icono}"                 
                                                HorizontalOptions="Center"
                                                Aspect="AspectFit"/>
                                        </Frame>

                                        <Label
                                                Text="{Binding Tipo}"
                                                Style="{StaticResource texto_titulo1}" />

                                        <Label
                                                Text="{Binding NumeroSalas,StringFormat='{0} Salas'}"
                                                Style="{StaticResource texto_subtitulo5}" />

                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                <StackLayout
                        Grid.Row="3"
                        Spacing="15">

                        <Label
                                Text="{x:Static recursos:Strings.publico}"
                                Style="{StaticResource texto_cabecera3}"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />

                    <CollectionView
                            ItemsSource="{Binding Publico}"
                            SelectionMode="Single"
                            SelectedItem="{Binding ObjetoSeleccionado,Mode=TwoWay}"
                            SelectionChangedCommand="{Binding VerFiltradasCommand}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                        Padding="7.5"
                                        HasShadow="False"
                                        Visual="Material"
                                        BackgroundColor="{DynamicResource variable1}">
                                    <StackLayout Spacing="4">
                                        <Frame
                                                Margin="0,0,0,4"
                                                WidthRequest="88"
                                                HeightRequest="88"
                                                Visual="Material"
                                                BackgroundColor="{DynamicResource variable2}">
                                            <Image
                                                Source="{Binding Icono}"                 
                                                HorizontalOptions="Center"
                                                Aspect="AspectFit"/>
                                        </Frame>

                                        <Label
                                                Text="{Binding Tipo}"
                                                Style="{StaticResource texto_titulo1}" />

                                        <Label
                                                Text="{Binding NumeroSalas,StringFormat='{0} Salas'}"
                                                Style="{StaticResource texto_subtitulo5}" />

                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                <StackLayout
                        Grid.Row="4"
                        Spacing="15">

                        <Label
                                Text="{x:Static recursos:Strings.dificultad}"
                                Style="{StaticResource texto_cabecera3}"
                                HorizontalOptions="Start"
                                VerticalOptions="Center" />

                    <CollectionView
                            ItemsSource="{Binding Dificultades}"
                            SelectionMode="Single"
                            SelectedItem="{Binding ObjetoSeleccionado,Mode=TwoWay}"
                            SelectionChangedCommand="{Binding VerFiltradasCommand}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                        Padding="7.5"
                                        HasShadow="False"
                                        Visual="Material"
                                        BackgroundColor="{DynamicResource variable1}">
                                    <StackLayout Spacing="4">
                                        <Frame
                                                Margin="0,0,0,4"
                                                WidthRequest="88"
                                                HeightRequest="88"
                                                Visual="Material"
                                                BackgroundColor="{DynamicResource variable2}">
                                            <Image
                                                Source="{Binding Icono}"                 
                                                HorizontalOptions="Center"
                                                Aspect="AspectFit"/>
                                        </Frame>

                                        <Label
                                                Text="{Binding Tipo}"
                                                Style="{StaticResource texto_titulo1}" />

                                        <Label
                                                Text="{Binding NumeroSalas,StringFormat='{0} Salas'}"
                                                Style="{StaticResource texto_subtitulo5}" />

                                    </StackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
                <StackLayout Grid.Row="5" Padding="0,0,15,0">
                    <Button Visual="Material"
                            BackgroundColor="{DynamicResource variable2}"
                            TextColor="{DynamicResource variable3}"
                            Command="{Binding VerTodasCommand}"
                            Text="Ver todas"/>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>