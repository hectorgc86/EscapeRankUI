                <StackLayout Margin="0,20,0,0"
                        Spacing="15">

                    <StackLayout Orientation="Horizontal">
                         <Label
                            Text="{x:Static recursos:Strings.popular_ahora}"
                            Style="{StaticResource texto_cabecera1}"
                            HorizontalOptions="StartAndExpand"/>

                        <ImageButton Source="{StaticResource icono_filtrar}"
                               Padding="15,0"
                               HorizontalOptions="End"
                               BackgroundColor="{DynamicResource variable1}"
                               Opacity=".8"
                               Aspect="AspectFit"/>
                    </StackLayout>

                    <CollectionView
                            ItemsSource="{Binding SalasPromocionadas}"
                            SelectionMode="Single"
                            SelectedItem="{Binding SalaSeleccionada,Mode=TwoWay}"
                            SelectionChangedCommand="{Binding VerSalaCommand}">

                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Horizontal" />
                        </CollectionView.ItemsLayout>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                        Padding="7.5"
                                        BackgroundColor="transparent"
                                        HasShadow="False">

                                    <Frame
                                            CornerRadius="6"
                                            WidthRequest="208"
                                            BackgroundColor="{DynamicResource variable1}"
                                            Visual="Material"
                                            HasShadow="False">
                                        <StackLayout Spacing="6">
                                            <Frame
                                                    CornerRadius="6"
                                                    Visual="Material"
                                                    HasShadow="False">
                                                <Image
                                                        Source="{Binding ImagenUriAncha}"
                                                        Aspect="AspectFill"
                                                        HeightRequest="150" />
                                            </Frame>
                                            <Label
                                                    Text="{Binding Nombre}"
                                                    Style="{StaticResource texto_titulo1}"
                                                    LineBreakMode="TailTruncation" />
                                            <Label
                                                    Text="{Binding Companyia.Ciudad.Nombre}"
                                                    Style="{StaticResource texto_subtitulo6}"
                                                    LineBreakMode="TailTruncation" />

                                            <StackLayout Orientation="Horizontal" Spacing="10">
                                                                                                                     
                                                <Image
                                                        Source="{StaticResource icono_estrella}"
                                                        HorizontalOptions="Start"
                                                        VerticalOptions="Center" />
                                                <Label
                                                        Text="{Binding NumeroResenyas,TargetNullValue=0}"
                                                        Style="{StaticResource texto_subtitulo5}"
                                                        HorizontalOptions="Start"
                                                        LineBreakMode="WordWrap" />
                                                <Image
                                                        Source="{StaticResource icono_minimo_usuarios}"
                                                        HorizontalOptions="Start"
                                                        VerticalOptions="Center" />
                                                <Label
                                                        Text="{Binding MinimoJugadores}"
                                                        Style="{StaticResource texto_subtitulo5}"
                                                        HorizontalOptions="Start"
                                                        LineBreakMode="WordWrap" />
                                            </StackLayout>
                                        </StackLayout>
                                    </Frame>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

