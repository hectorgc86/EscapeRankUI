<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EscapeRankUI.Views.Login.RegistroPage"
             BackgroundColor="{StaticResource azul1}"
             NavigationPage.HasNavigationBar="false"
             Visual="Material">

    <Grid Style="{StaticResource espacio_grid_normal}">
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout VerticalOptions="FillAndExpand">
                <StackLayout VerticalOptions="CenterAndExpand">

                    <Label Text="Registrarse" Style="{StaticResource texto_cabecera5}" HorizontalTextAlignment="Center"/>

                    <Label Padding="0,24,0,16" Style="{StaticResource texto_titulo2}" HorizontalTextAlignment="Center" Text="Cree una cuenta antes de comenzar" />

                    <StackLayout x:Name="FormLayout" Spacing="16" VerticalOptions="CenterAndExpand">
                        <Grid ColumnSpacing="16"/>
                        <StackLayout Spacing="8">

                            <Label Text="Nombre" Style="{StaticResource texto_titulo2}" />
                            <Entry Text="{Binding Nombre}" Style="{StaticResource texto_subtitulo8}" Keyboard="Text" />

                        </StackLayout>
                        <StackLayout Spacing="8">

                            <Label Text="Email" Style="{StaticResource texto_titulo2}" />
                            <Entry Text="{Binding Email}" Style="{StaticResource texto_subtitulo8}" IsPassword="True" Keyboard="Email" />

                        </StackLayout>
                        <StackLayout Spacing="8">

                            <Label Text="Contraseña" Style="{StaticResource texto_titulo2}" />
                            <Entry Text="{Binding Contrasenya}" Style="{StaticResource texto_subtitulo8}" IsPassword="True" Keyboard="Text" />

                        </StackLayout>
                        <StackLayout Spacing="8">
                            <Label Text="Repetir contraseña" Style="{StaticResource texto_titulo2}" />
                            <Entry Text="{Binding RepContrasenya}" Style="{StaticResource texto_subtitulo8}" IsPassword="True" Keyboard="Text" />
                        </StackLayout>

                        <Button x:Name="RegistrarButton" Command="{Binding RegistrarCommand}" Style="{StaticResource estilo_boton1}" VerticalOptions="EndAndExpand" Text="Registrar" />

                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="0,0,0,50">

                    <Label HorizontalTextAlignment="Center" Style="{StaticResource texto_subtitulo8}" Text="¿Ya tienes una cuenta?"/>

                    <Label x:Name="LoginLabel"  Padding="8,0,0,0" Style="{StaticResource texto_subtitulo8}" HorizontalTextAlignment="End" Text="Ingresar">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LoginCommand}" CommandParameter="{x:Reference LoginLabel}" />
                        </Label.GestureRecognizers>
                    </Label>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>